<h1>Listing Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%for i in (0..2)%>
  <%=@bot_message[i]%>
  <img src="<%=@img_url[i]%>"><br />
  <%end%>
  <h2>melon</h2>
  <%for i in (0..2)%>

  <%=@mmu[i]%>
  <img src="<%=@mmi[i]%>"height="50" width="50"><br />

  <%end%>  <h2>genie</h2>
    <%for i in (0..2)%>

    <%=@gmu[i]%>
    <img src="<%=@gmi[i]%>"height="50" width="50"><br />
    <%end%>
    <h2>bugs</h2>
    <%for i in (0..2)%>
    <%=@bmu[i]%>
    <img src="<%=@bmi[i]%>" height="50" width="50"><br />
    <%end%>
