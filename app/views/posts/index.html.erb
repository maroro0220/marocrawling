      <%=@weather[i]%><br />
    <%end%>
    <%=@wise_saying%><br />
    <%=@wsaying[@wise_saying]%>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
